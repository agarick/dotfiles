[colors]
background = #bbbbc3
background-alt = #fff
foreground = #5a595f
foreground-alt = #95959d
primary = #437e00
secondary = #4051b0
alert = #c74032
dark = #3a393f

[bar/0bar]
monitor =
override-redirect = false
bottom = false
fixed-center = true
width = 100%
height = 24
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground}
radius = 0.0
padding = 0
dpi-x = 120
dpi-y = 120
font-0 = Roboto Mono:size=10:style=bold;3
font-1 = NanumGothicCoding:size=10:style=bold;4
font-2 = FreeMono:size=10:style=bold;3
modules-left = date filesystem memory cpu temperature
modules-center = xwindow
modules-right = powermenu battery backlight wlan pulseaudio
tray-position = right
tray-padding = 1
tray-background = ${colors.background}
cursor-click = pointer
cursor-scroll = ns-resize
separator = "  "

[module/date]
type = internal/date
interval = 10.0
time = "%H:%M %a %d %b"
label = %time%
label-foreground = ${colors.dark}
format-prefix = " "

[module/filesystem]
type = internal/fs
interval = 30.0
mount-0 = /
label-mounted = %mountpoint%%percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/memory]
type = internal/memory
interval = 4.0
label = %percentage_used%%m

[module/cpu]
type = internal/cpu
interval = 2.0
label = %percentage:2%%c

[module/temperature]
type = internal/temperature
thermal-zone = 7
interval = 2.0
warn-temperature = 60
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}
format = <label>
format-warn = <label-warn>

[module/xwindow]
type = internal/xwindow
label = %title:0:80:...%
label-foreground = ${colors.dark}
label-empty = x
label-empty-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu
expand-right = false
format-spacing = 0
label-open = pow
label-open-foreground = ${colors.primary}
label-close = cancel
label-close-foreground = ${colors.primary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}
menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = shutdown
menu-0-1-exec = menu-open-2
menu-0-2 = sleep
menu-0-2-exec = menu-open-3
menu-0-3 = logout
menu-0-3-exec = menu-open-4
menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = "0bye reboot"
menu-1-1-foreground = ${colors.alert}
menu-2-0 = cancel
menu-2-0-exec = menu-open-0
menu-2-1 = shutdown
menu-2-1-exec = "0bye shutdown"
menu-2-1-foreground = ${colors.alert}
menu-3-0 = cancel
menu-3-0-exec = menu-open-0
menu-3-1 = sleep
menu-3-1-exec = "0bye sleep"
menu-3-1-foreground = ${colors.alert}
menu-4-0 = logout
menu-4-0-exec = "0bye logout"
menu-4-0-foreground = ${colors.alert}
menu-4-1 = cancel
menu-4-1-exec = menu-open-0

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
poll-interval = 4.0
;full-at = 98
time-format = %R
label-charging = %percentage%%(%time%)%consumption%
label-discharging = %percentage%%(%time%)%consumption%
format-charging = <label-charging>+b
format-discharging = <label-discharging>-b
format-full = fullb

[module/backlight]
type = internal/backlight
card = intel_backlight
label = %percentage%%
format = <label>l

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 4.0
label-connected = %essid%
label-disconnected = xw
label-disconnected-foreground = ${colors.foreground-alt}
format-connected = <label-connected>
format-disconnected = <label-disconnected>

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = true
interval = 4.0
label-muted = "muted "
label-muted-foreground = ${colors.foreground-alt}
format-volume = "<label-volume>v "

[settings]
screenchange-reload = true

