#! /usr/bin/env tclsh

source $::env(HOME)/bin/lib.tcl

need notify-send

set arg [lindex $::argv 0]
switch -- $arg {
  h - hsnt {
    set arg hsnt
    exec setxkbmap hsnt
  }
  q - qwerty - u - us {
    set arg qwerty
    exec setxkbmap -option ctrl:nocaps us
  }
  b - bow {
    set arg bow
    exec setxkbmap -option bow
  }
  default {
    fail "Usage: $ME h_snt|q_werty|b_ow"
  }
}

exec notify-send -u low -t 2000 -i input-keyboard key $arg

