// /usr/share/X11/xkb/symbols/bow

// Apply ctrl:nocaps, and make the Grave key an Escape key,
// then make the right Alt key a Grave key.
default partial alphanumeric_keys modifier_keys
xkb_symbols "bow" {
  include "hsnt"
  name[Group1]= "English (Hsnt, bow)";
  key <TLDE> { [ Escape ] };
  replace key <RALT> { [ grave, asciitilde ] };
};

