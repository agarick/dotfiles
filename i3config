bindsym    XF86MonBrightnessDown exec --no-startup-id sudo 0lum - # 232
bindsym    XF86MonBrightnessUp   exec --no-startup-id sudo 0lum + # 233
bindsym    Print                 exec --no-startup-id 0hot shot   # 107
