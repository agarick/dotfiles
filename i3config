set $clr-bm #6c71c4
set $clr-bc #93a1a1
set $clr-bw #fdf6e3
bindsym $m+f            fullscreen toggle
bindsym $m+comma        border toggle
bindsym $m+period       layout default
bindsym $m+$a+period    layout tabbed
bindsym $m+$c+period    layout stacked
bindsym $m+semicolon    split vertical
bindsym $m+$a+semicolon split horizontal
bindsym $m+$c+semicolon layout toggle split
bindsym $m+slash        floating toggle
bindsym $m+apostrophe   focus mode_toggle
bindsym $m+BackSpace    scratchpad show
bindsym $m+$a+BackSpace move scratchpad
bindsym $m+g     [urgent=latest] focus
bindsym $m+h     focus left
bindsym $m+j     focus down
bindsym $m+k     focus up
bindsym $m+l     focus right
bindsym $m+minus focus child
bindsym $m+equal focus parent
bindsym $m+$a+h  move left
bindsym $m+$a+j  move down
bindsym $m+$a+k  move up
bindsym $m+$a+l  move right
bindsym $m+1     workspace 1
bindsym $m+2     workspace 2
bindsym $m+3     workspace 3
bindsym $m+4     workspace 4
bindsym $m+5     workspace 5
bindsym $m+6     workspace 6
bindsym $m+Left  workspace prev
bindsym $m+Right workspace next
bindsym $m+$a+1     move container to workspace 1
bindsym $m+$a+2     move container to workspace 2
bindsym $m+$a+3     move container to workspace 3
bindsym $m+$a+4     move container to workspace 4
bindsym $m+$a+5     move container to workspace 5
bindsym $m+$a+6     move container to workspace 6
bindsym $m+$a+Left  move container to workspace prev
bindsym $m+$a+Right move container to workspace next
bindsym $m+r mode "resize"
mode "resize" {
  bindsym h     resize shrink width  5 px or 5 ppt
  bindsym j     resize grow   height 5 px or 5 ppt
  bindsym k     resize shrink height 5 px or 5 ppt
  bindsym l     resize grow   width  5 px or 5 ppt
  bindsym Left  resize shrink width  1 px or 1 ppt
  bindsym Down  resize grow   height 1 px or 1 ppt
  bindsym Up    resize shrink height 1 px or 1 ppt
  bindsym Right resize grow   width  1 px or 1 ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym    XF86AudioMute         exec --no-startup-id 0hot vol x  # 121
bindsym $s+XF86AudioLowerVolume  exec --no-startup-id 0hot vol -  # 122
bindsym    XF86AudioLowerVolume  exec --no-startup-id 0hot vol --
bindsym $s+XF86AudioRaiseVolume  exec --no-startup-id 0hot vol +  # 123
bindsym    XF86AudioRaiseVolume  exec --no-startup-id 0hot vol ++
