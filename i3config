bindsym $c+Print                 exec --no-startup-id 0hot shot w
bindsym    XF86PowerOff          exec --no-startup-id 0pow Lock   # 124
bindsym $m+$s+c reload
bindsym $m+$s+r restart
bindsym $m+$s+Escape kill
bindsym $a+$c+BackSpace exec --no-startup-id 0pow
bindsym $a+$c+Delete    exec --no-startup-id 0pow
bindsym $m+backslash    exec --no-startup-id 0hot kbl
bindsym $m+Return       exec --no-startup-id rofi -show run
bindsym $m+$a+Return    exec --no-startup-id 0hot i3m
bindsym $m+e            exec emacsclient -nc
bindsym $m+m            exec thunderbird-bin
bindsym $m+t            exec --no-startup-id st -e tmux
bindsym $m+$a+t         exec --no-startup-id st-alt
bindsym $m+w            exec google-chrome-stable --disk-cache-dir=/tmp/b_tmp_chrome_cache
bindsym $m+$a+w         exec firefox-bin
client.background       $clr-bk
client.focused          $clr-bg $clr-bg $clr-bk $clr-bb
client.focused_inactive $clr-k  $clr-k  $clr-by $clr-by
client.unfocused        $clr-bk $clr-bk $clr-bg $clr-by
client.urgent           $clr-c  $clr-c  $clr-bw $clr-bm
client.placeholder      $clr-k  $clr-k  $clr-w  $clr-w
floating_minimum_size 32 x 32
floating_modifier $m
focus_follows_mouse no
for_window [class="Vlc"] floating enable
font 0title
new_float normal 4
new_window pixel 4
bar {
  colors {
    background         $clr-bk
    separator          $clr-k
    focused_workspace  $clr-bk $clr-bk $clr-bw
    active_workspace   $clr-bk $clr-bk $clr-y
    inactive_workspace $clr-bk $clr-bk $clr-bg
    urgent_workspace   $clr-c  $clr-c  $clr-bw
  }
  font 0autonoe
  id i3bar
  mode dock
  position top
  status_command 0mon
}
